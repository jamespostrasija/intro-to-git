<% include ../partials/header %>
	
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome To Have Lots Need Lots</h1>
			<p>View Active Listings in Calgary, Area!</p>
			<p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Listing</a></p>
		</div>
	</header>

	<div class="row">
		<div class="col-lg-12">
			<h3>
				Our Active Listings
			</h3>
		</div>
	</div>
	
	
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campgrounds){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= campgrounds.image.url %>" class="img-responsive" style="height:250px; width: 300px;">
                <div class="caption">
                    <h4><%= campgrounds.name %></h4>
                    <% if (campgrounds.rating === 0) { %>
                    <em>No reviews yet.</em>
                    <% } else { %>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star <% if (campgrounds.rating > 1.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (campgrounds.rating > 2.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (campgrounds.rating > 3.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (campgrounds.rating > 4.5) { %> checked <% } %>"></span>
                    <% } %>
                </div>
				<div class="caption">
				<span class="badge label-primary"><i class="fa fa-thumbs-up"></i> <%= campgrounds.likes.length %></span>
				</div>
                <p>
                    <a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary btn-md active"><i class="fa fa-plus"></i> View Listing</a>
                </p>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>